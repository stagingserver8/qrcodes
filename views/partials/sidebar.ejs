<script>
    function selectNavItem(event) {
        const navLinks = document.querySelectorAll('.nav-link');
        navLinks.forEach(link => {
            link.classList.remove('active'); // Remove active from all links
        });
        event.currentTarget.classList.add('active'); // Add active to clicked link
        localStorage.setItem('activeNav', event.currentTarget.getAttribute('href')); // Save active state
    }

    // Set the active class based on stored item
    window.onload = () => {
        const activeNav = localStorage.getItem('activeNav');
        if (activeNav) {
            const activeElement = document.querySelector(`a[href="${activeNav}"]`);
            if (activeElement) {
                activeElement.classList.add('active');
            }
        }
    }

</script>